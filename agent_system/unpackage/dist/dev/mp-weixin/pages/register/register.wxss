.footer {
  background: transparent;
  color: #fff;
}
.tips {
  font-size: 14px;
  margin-top: 15px;
}
.tips .mark {
  color: #226FF9;
  text-decoration: underline;
  display: inline-block;
  margin-left: 10px;
  cursor: pointer;
}
.content {
  width: 100%;
  height: 100vh;
  background: url(/static/banner.png) no-repeat;
  background-size: cover;
}
.content .mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}
.content .mask .inner {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background: #fff;
  width: 500px;
  padding: 60px 40px;
  border-radius: 10px;
}
.content .mask .inner .title {
  font-size: 26px;
  font-weight: 600;
  color: #333;
  margin-bottom: 70px;
  text-align: center;
}
.content .mask .inner .form {
  color: #333;
  margin-bottom: 50px;
}
.content .mask .inner .form .line {
  margin: 20px 0;
}
.content .mask .inner .form .line .tit {
  width: 100px;
  margin-right: 15px;
}
.content .mask .inner .form .line .input_wrap {
  width: calc(100% - 115px);
  position: relative;
}
.content .mask .inner .form .line .input_wrap input {
  width: 100%;
  display: inline-block;
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  box-sizing: border-box;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
}
.content .mask .inner .form .line .input_wrap image {
  width: 200px;
  margin-left: 15px;
}
.content .mask .inner .form .line .input_wrap .send_code {
  height: 40px;
  line-height: 40px;
  width: 120px;
  text-align: center;
  border-radius: 4px;
  background: #226FF9;
  color: #fff;
  font-size: 14px;
  position: absolute;
  top: 0;
  right: 0;
}
.content .mask .inner .form .line .input_wrap .send_code:hover {
  background: #0092ff;
  cursor: pointer;
}
.content .mask .inner .form .line .input_wrap .send_code.disabled {
  background: #f6f6f6;
  color: #999;
}
.content .mask .inner .form .line .input_wrap .send_code.disabled:hover {
  background: #f6f6f6;
  color: #999;
  cursor: not-allowed;
}
.content .mask .inner .register {
  height: 40px;
  line-height: 40px;
  width: 100%;
  background: #226FF9;
  color: #fff;
  text-align: center;
  margin-top: 20px;
  border-radius: 4px;
}
.content .mask .inner .register:hover {
  background: #0092ff;
  cursor: pointer;
}

