.footer {
  background: transparent;
  color: #fff;
}
.tips {
  font-size: 14px;
  margin-top: 15px;
  text-align: center;
}
.tips .mark {
  color: #226FF9;
  display: inline-block;
  margin-left: 10px;
  margin-right: 25px;
  cursor: pointer;
}
.content {
  width: 100%;
  height: 100vh;
  background: url(/static/login_bg.jpg) no-repeat;
  background-size: cover;
  background-position: right top;
}
.content .right {
  width: 368px;
  padding: 30px 20px;
  box-sizing: border-box;
  border-radius: 10px;
  margin-left: 196px;
  margin-top: 128px;
  background: rgba(255, 255, 255, 0.8);
}
.content .right .tabs {
  margin-top: 40px;
}
.content .right .tabs .tab {
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  cursor: pointer;
}
.content .right .tabs .tab.active {
  color: #226FF9;
  border-bottom: 2px solid #226FF9;
}
.content .right input:-internal-autofill-selected {
  background-color: transparent !important;
}
.content .mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}
.content .mask .inner {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 10px;
  box-sizing: border-box;
  max-width: 1200px;
  min-width: 1024px;
}
.content .mask .inner .left {
  width: 60%;
}
.content .mask .inner .left image {
  width: 100%;
}
.header {
  font-size: 50px;
}
.list {
  display: flex;
  flex-direction: column;
  padding-top: 20px;
  /* padding-left: 70upx;
	padding-right: 70upx; */
}
.list-call {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  color: #333333;
  width: 100%;
  text-align: center;
  margin-bottom: 24px;
  margin-top: 0;
  border-radius: 4px;
  border: 1px solid #D9D9D9;
  border-radius: 6rpx;
  position: relative;
}
.list-call:nth-child(3) {
  width: calc(100% - 160px);
}
.list-call .codeimg {
  width: 160px;
  position: absolute;
  top: 50%;
  left: 100%;
  -webkit-transform: translate(15px, -50%);
          transform: translate(15px, -50%);
  background: #fff;
}
.list-call .img {
  width: 25px;
  height: 25px;
  padding: 0 10px;
}
.list-call .biaoti {
  flex: 1;
  text-align: left;
  font-size: 16px;
  line-height: 50px;
  height: 40px;
  min-height: 40px;
  padding-left: 5px;
  border-radius: 6px;
}
.get_code {
  padding: 0 5px;
  font-size: 14px;
  color: #226FF9;
  cursor: pointer;
}
.get_code.disabled {
  color: #999;
}
.dlbutton {
  color: #FFFFFF;
  font-size: 16px;
  width: 100%;
  height: 40px;
  border-radius: 4px;
  background: #226FF9;
  font-weight: bold;
  align-items: center;
  display: flex;
  justify-content: center;
  line-height: 40px;
  text-align: center;
  /* margin-left: auto;
	margin-right: auto; */
  margin-top: 30px;
}
.dlbutton:hover {
  cursor: pointer;
  background: #3da5ff;
}
.dlbutton:hover {
  background-color: #226FF9;
}
.xieyi {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  margin-top: 80rpx;
  color: #FFA800;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
}
.xieyi text {
  font-size: 22rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

