.btn {
  min-width: 80px;
  max-width: 120px;
  padding: 0 10px;
  box-sizing: border-box;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 4px;
  background: #226FF9;
  color: #fff;
  cursor: pointer;
}
.btn:hover {
  opacity: 0.8;
}
.board {
  padding: 0 20px;
  color: #333;
  min-height: calc(100vh - 60px);
  box-sizing: border-box;
  margin-top: 60px;
}
.board .box {
  min-height: calc(100vh - 60px);
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  box-sizing: border-box;
}
.board .box .title {
  font-size: 18px;
  font-weight: 600;
  margin: 15px 0;
  padding-left: 12px;
  position: relative;
}
.board .box .title::before {
  content: "";
  width: 4px;
  height: 20px;
  background: #226FF9;
  border-radius: 2px;
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.board .box .base .line .tit {
  width: 80px;
}
.board .box .base .line .text {
  width: calc(100% - 80px);
  flex-wrap: wrap;
}
.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 101;
}
.mask.mask2 {
  z-index: 105;
}
.mask .inner {
  width: 60%;
  max-height: 800px;
  overflow: scroll;
  border-radius: 10px;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  box-sizing: border-box;
  background: #fff;
}
.mask .inner::-webkit-scrollbar {
  width: 0;
}
.mask .inner .close {
  position: absolute;
  top: 15px;
  right: 15px;
  color: #fff;
}
.mask .inner .close:hover {
  cursor: pointer;
}
.mask .inner .close image {
  width: 20px;
  height: 20px;
}
.mask .inner .title {
  font-size: 18px;
  height: 50px;
  line-height: 50px;
  padding: 0px 30px;
  background: url(/static/mask_title_bg.png) no-repeat;
  background-size: cover;
  color: #fff;
  position: relative;
}
.mask .inner .box {
  min-height: auto;
  height: auto;
  padding: 25px 30px;
  border-radius: 0;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.mask .inner .box .line .tit {
  width: 100px;
}
