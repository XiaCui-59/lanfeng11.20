.tags {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.5);
}
.tags .tags_box {
  width: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  border-radius: 10px;
  background: #fff;
}
.tags .tags_box .title {
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-weight: 600;
  background: url(/static/mask_title_bg.png) no-repeat;
  background-size: cover;
  color: #fff;
  position: relative;
}
.tags .tags_box .title .close {
  position: absolute;
  top: 50%;
  right: 20px;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  cursor: pointer;
}
.tags .tags_box .title .close image {
  width: 20px;
  height: 20px;
}
.tags .tags_box .btns {
  padding-right: 20px;
}
.tags .tags_box .btns .btn {
  margin-top: 0;
  margin-bottom: 20px;
  margin-left: 15px;
}
.tags .tags_box .btns .btn.cancel {
  background: #fff;
  border: 1px solid #ccc;
  color: #333;
}
.tags .tags_box .item_wrap {
  padding: 15px 20px;
  box-sizing: border-box;
  font-size: 14px;
}
.tags .tags_box .item_wrap .item {
  margin-bottom: 15px;
}
.tags .tags_box .item_wrap .item .tit {
  height: 40px;
  line-height: 40px;
  font-weight: 600;
}
.tags .tags_box .item_wrap .item .tag_container {
  padding: 0 15px;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.tags .tags_box .item_wrap .item .tag_container .tag {
  padding: 5px 10px;
  border-radius: 4px;
  background: #f3f3f3;
  margin: 0 10px 15px 10px;
  cursor: pointer;
}
.tags .tags_box .item_wrap .item .tag_container .tag.active {
  background: #37a2ff;
  color: #fff;
}

