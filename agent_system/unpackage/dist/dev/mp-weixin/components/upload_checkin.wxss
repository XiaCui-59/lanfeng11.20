 .uni-select__input-placeholder {
  font-size: 16px;
}
 .uni-select {
  height: 40px;
  font-size: 16px;
}
.down_area {
  margin: 15px 0;
}
.down_area .down {
  color: #226FF9;
  text-decoration: underline;
  cursor: pointer;
}
.down_area .tips {
  font-size: 14px;
  color: #f00;
  margin-top: 15px;
}
.box .tempinfo {
  width: 400px;
}
.box .tempinfo .line .input_wrap {
  height: 32px;
  color: rgba(0, 0, 0, 0.4);
}
.box .tempinfo .line .input_wrap .mark {
  color: #333;
}
.box .tempinfo .wrap .line {
  width: 48%;
}
.box .line {
  max-width: 400px;
  margin-bottom: 20px;
  position: relative;
}
.box .line .com_mask {
  max-height: 200px;
  overflow-y: scroll;
  position: absolute;
  width: 400px;
  top: 100%;
  left: 0;
  box-shadow: 0px 2px 5px 2px #eee;
  background: #fff;
  z-index: 10;
  padding: 15px 0;
}
.box .line .com_mask .com_item {
  height: 30px;
  line-height: 30px;
  padding-left: 15px;
  box-sizing: border-box;
  font-size: 14px;
  cursor: pointer;
}
.box .line .com_mask .com_item:hover {
  background: #d7e6f8;
}
.box .line.scope {
  align-items: start;
}
.box .line .tit {
  margin-bottom: 10px;
}
.box .line .input_wrap {
  border: 1px solid #e9e9e9;
  border-radius: 4px;
  position: relative;
  padding: 0 12px;
  box-sizing: border-box;
}
.box .line .input_wrap input {
  height: 35px;
  line-height: 35px;
}
.box .line .input_wrap.noborder {
  border: none;
}
.box .line .input_wrap .dele {
  border: 1px solid #f00;
  background: transparent;
  color: #f00;
  margin-left: 15px;
  width: 60px;
}
.box .line .input_wrap .file_upload {
  margin-top: 15px;
  height: 120px;
  text-align: center;
  border: 1px solid #e9e9e9;
  border-radius: 6px;
  position: relative;
  cursor: pointer;
}
.box .line .input_wrap .file_upload .file_btn {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.box .line .input_wrap .file_upload .file_btn image {
  margin-bottom: 5px;
}
.box .line .input_wrap .file_upload .file_btn view {
  font-size: 14px;
}
.box .line .input_wrap .add {
  min-width: 80px;
  margin-left: 15px;
}
.mask .inner .box .line {
  margin-bottom: 15px;
}
.mask .inner .box .line .tit {
  width: 90px;
}
.mask .inner .box .line .input_wrap {
  width: calc(100% - 90px);
  height: 40px;
  line-height: 40px;
  border-radius: 6px;
}
.mask .inner .box .line .input_wrap input {
  height: 40px;
  padding-left: 10px;
  box-sizing: border-box;
}
.mask .inner .box .subtit {
  font-size: 18px;
  text-align: center;
  margin-bottom: 30px;
}
.mask .inner .box .subtit text {
  font-weight: 600;
  display: inline-block;
  margin: 0 10px;
}

