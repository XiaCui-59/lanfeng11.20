.top_header {
  height: 50px;
  background: #FFFFFF;
  box-shadow: 0px 2px 12px 5px rgba(138, 149, 156, 0.2);
  color: #333333;
  padding: 0 20px;
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  left: 200px;
  top: 0;
  z-index: 100;
}
.top_header .logo image {
  width: 26px;
  height: 26px;
  margin-right: 15px;
}
.top_header .logo text {
  font-size: 23px;
}
.top_header .user_box {
  font-size: 14px;
}
.top_header .user_box .item {
  margin-left: 40px;
}
.top_header .user_box .item image {
  width: 20px;
  height: 20px;
  margin-right: 6px;
}
.top_header .user_box .item.logclass {
  position: relative;
  cursor: pointer;
}
.top_header .user_box .item.logclass text {
  display: inline-block;
  margin: 0 5px;
}
.top_header .user_box .item.logclass image {
  width: 30px;
  height: 30px;
}
.top_header .user_box .item.logclass image:nth-child(3) {
  width: 13px;
  height: 13px;
}
.top_header .user_box .item.logclass .logout {
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  position: absolute;
  top: 150%;
  left: 0;
  background: #226FF9;
  z-index: 100;
  font-size: 14px;
  color: #fff;
}
.top_header .user_box .item.logclass .logout:hover {
  background: #0e4b84;
  cursor: pointer;
}

