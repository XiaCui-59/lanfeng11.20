.in_box {
  margin-top: 30px;
  align-items: start;
}
.in_box .left {
  width: 48%;
  padding-bottom: 250px;
  border-right: 1px solid #E9E9E9;
}
.in_box .left .item {
  padding: 25px 0;
  border-bottom: 1px solid #E9E9E9;
  cursor: pointer;
  transition: all .2s;
}
.in_box .left .item.active {
  border-right: 3px solid #0F90FF;
}
.in_box .left .item:hover {
  background: #f6f6f6;
}
.in_box .left .item image {
  width: 51px;
  margin-right: 15px;
}
.in_box .left .item .text .tit {
  font-weight: 600;
  font-size: 14px;
  color: #000000;
  line-height: 20px;
}
.in_box .left .item .text .desc {
  font-weight: 400;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.45);
  line-height: 20px;
}
.in_box .right {
  width: 48%;
}
.in_box .right .tips {
  font-weight: 400;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.45);
  line-height: 20px;
  margin-top: 10px;
}
.in_box .right .input_box {
  margin-top: 50px;
}
.in_box .right .input_box .input_wrap {
  width: calc(100% - 120px);
  position: relative;
}
.in_box .right .input_box .input_wrap image {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 50%;
  left: 5px;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.in_box .right .input_box .input_wrap input {
  height: 40px;
  width: 100%;
  padding: 0 30px;
  text-align: right;
  box-sizing: border-box;
  border: 1px solid #000000;
  font-weight: 800;
  font-size: 30px;
  color: #000000;
}
.in_box .right .input_box .input_wrap text {
  font-weight: 400;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.45);
  position: absolute;
  top: 50%;
  right: 5px;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}

