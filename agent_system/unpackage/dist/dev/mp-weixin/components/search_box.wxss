.search_box {
  background: #fff;
  border-radius: 8px;
  margin: 20px 0 0 0;
  flex-wrap: wrap;
}
.search_box .line {
  margin-right: 15px;
  margin-bottom: 15px;
}
.search_box .line .tit {
  font-size: 16px;
  color: #333;
  margin-right: 15px;
  font-weight: bold;
}
.search_box .line .cont {
  width: 210px;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
  padding: 10px;
  font-size: 14px;
  color: #666;
  position: relative;
  background: #EFF0F1;
  border-radius: 4px;
}
.search_box .line .cont image {
  width: 15px;
  position: absolute;
  top: 50%;
  right: 10px;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.search_box .line .cont input {
  width: 100%;
  height: 100%;
}
.search_box .line .cont .conect {
  margin: 0 10px;
  color: #333;
}
.search_box .line .btn {
  height: 38px;
  line-height: 38px;
  width: 80px;
  text-align: center;
  border-radius: 4px;
  cursor: pointer;
}
.search_box .line .reset {
  border: 1px solid #d4d4d4;
  margin-right: 15px;
}
.search_box .line .reset:hover {
  background: #f0f0f0;
  color: #0092ff;
  cursor: pointer;
}
.search_box .line .search {
  background: #0092ff;
  color: #fff;
}
.search_box .line .search:hover {
  background: #0ec8f1;
  cursor: pointer;
}

