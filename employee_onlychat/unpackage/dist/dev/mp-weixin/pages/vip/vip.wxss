.vip {
  width: 100%;
  min-height: 100vh;
  background: #16151A;
  color: #FFFFFF;
  padding: 38rpx 28rpx 0 28rpx;
  box-sizing: border-box;
}
.vip .btn {
  background: linear-gradient(180deg, #FEFCF9 0%, #E9CC8A 100%);
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  margin-top: 244rpx;
  font-weight: 600;
  font-size: 31rpx;
  color: #16151A;
}
.vip .cont .top {
  position: relative;
}
.vip .cont .top > image {
  width: 100%;
}
.vip .cont .top .info {
  position: absolute;
  top: 12%;
  left: 10%;
}
.vip .cont .top .info .tit {
  width: 260rpx;
  margin-bottom: 10rpx;
}
.vip .cont .top .info .mark {
  font-size: 25rpx;
  color: #D8D8D8;
  line-height: 35rpx;
  margin-bottom: 30rpx;
}
.vip .cont .top .info .mark.is_vip_mark {
  font-weight: 400;
  font-size: 25rpx;
  color: #72402B;
}
.vip .cont .top .info .vip_btn {
  width: 185rpx;
}
.vip .cont .top .info .date {
  margin-top: 30rpx;
}
.vip .cont .top .info .date .tit {
  font-weight: 400;
  font-size: 25rpx;
  color: #72402B;
}
.vip .cont .top .info .date .time {
  font-family: "HiraMaruProN", "HiraMaruProN";
  font-size: 31rpx;
  color: #16151A;
}
.vip .cont .middle {
  margin-top: 94rpx;
