.tabs .tab {
  padding: 0 20rpx;
  height: 44px;
  line-height: 44px;
  font-weight: 500;
  font-size: 35rpx;
  color: #7aa5c8;
}
.tabs .tab.active {
  font-weight: 600;
  font-size: 46rpx;
  color: #0F2A4F;
  position: relative;
}
.tabs .tab.active::after {
  content: "";
  width: 29rpx;
  height: 6rpx;
  background: #0F2A4F;
  border-radius: 4rpx;
  position: absolute;
  bottom: -4rpx;
  left: 50%;
