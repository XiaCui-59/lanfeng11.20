.logout {
  position: fixed;
  width: calc(83vw - 56rpx);
  bottom: 30rpx;
  text-align: center;
  left: 28rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 25rpx;
  border: 1rpx solid #D8E6FF;
  font-size: 31rpx;
  color: #8F8F99;
  background: #fff;
}
.inner {
  padding: 0 28rpx;
  width: 83vw;
  box-sizing: border-box;
  background: #fff;
  color: #4C4C53;
  height: 100%;
}
.user_base_out {
  position: relative;
}
.user_base_out .vip_icon {
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
}
.user_base_out .vip_icon image {
  width: 170rpx;
}
.user_base {
  margin-bottom: 76rpx;
  background-size: 100% 100%;
  box-sizing: border-box;
  border-radius: 25rpx;
  overflow: hidden;
}
.user_base .tips {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 0.15);
}
.user_base .tips image {
  width: 200rpx;
}
.user_base .tips .tip {
  width: calc(100% - 200rpx);
  font-weight: 400;
  font-size: 23rpx;
  color: #282319;
  text-align: center;
}
.user_base > image {
  width: 100%;
}
.user_base .user_box {
  padding: 30rpx 30rpx 0 30rpx;
}
.user_base .user_box > image {
  width: 176rpx;
}
.user_base .user_box .user {
  margin-top: 10rpx;
}
.user_base .user_box .user image {
  width: 73rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  border-radius: 19rpx;
}
.user_base .user_box .user .name {
  justify-content: space-between;
  text-align: left;
}
.user_base .user_box .user .name.not_vip {
  flex-direction: column;
  align-items: start;
}
.user_base .user_box .user .name.isvip .tit {
  color: #fff;
  text-shadow: 0px 2px 4px #000000;
}
.user_base .user_box .user .name .tit {
  font-weight: 600;
  font-size: 32rpx;
  color: #fff;
}
.user_base .user_box .user .name .mark {
  font-size: 23rpx;
  color: #7980AA;
}
.ic_menu {
  width: 58rpx;
  height: 58rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.ic_menu image {
  width: 58rpx;
}
.input_btn_wrap {
  width: calc(100% - 56rpx);
  position: fixed;
  left: 28rpx;
  bottom: 24rpx;
  height: 100rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 4rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 63rpx;
  z-index: 10;
}
.input_btn_wrap .phone_icon {
  position: absolute;
  right: 0;
  font-size: 0;
}
.input_btn_wrap .phone_icon image {
  width: 77rpx;
}
.input_btn_wrap .voice_inputing {
  text-align: center;
}
.input_btn_wrap .voice_inputing image {
  height: 100rpx;
}
.input_btn_wrap .btns_wrap {
  position: absolute;
  bottom: calc(100% + 10px);
  left: 0;
}
.input_btn_wrap .btns_wrap .btn_item {
  width: 180rpx;
  text-align: center;
  height: 30px;
  line-height: 30px;
  background: #F7F8FA;
  border-radius: 63rpx;
  font-size: 27rpx;
  color: #7D8488;
  margin-right: 15rpx;
  justify-content: center;
}
.input_btn_wrap .btns_wrap .btn_item image {
  width: 28rpx;
  margin-right: 6rpx;
}
.input_btn_wrap .voice_btn_wrap {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.input_btn_wrap .input_box {
  padding: 0 75rpx 0 100rpx;
  box-sizing: border-box;
}
.input_btn_wrap .input_box input {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #0F2A4F;
  position: relative;
}
.input_btn_wrap .fl_icon {
  position: absolute;
  top: 8rpx;
  left: 11rpx;
}
.input_btn_wrap .fl_icon image {
  width: 86rpx;
  height: 86rpx;
}
.input_btn_wrap .func_icon {
  position: absolute;
  top: 20rpx;
  right: 15rpx;
  z-index: 100;
}
.input_btn_wrap .func_icon image {
  width: 60rpx;
  height: 60rpx;
}

