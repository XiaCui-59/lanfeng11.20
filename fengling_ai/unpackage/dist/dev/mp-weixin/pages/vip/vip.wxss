.count {
  display: inline-block;
  margin: 0 10rpx;
  font-size: 44rpx;
  font-family: "也字工厂";
}
.vip {
  width: 100%;
  min-height: 100vh;
  background: #FFFFFF;
  color: #010101;
  padding: 38rpx 28rpx 38rpx 28rpx;
  box-sizing: border-box;
}
.vip .btn {
  background: #EFC562;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  margin-top: 53rpx;
  font-weight: 600;
  font-size: 31rpx;
  color: #282319;
}
.vip .more {
  margin-top: 200rpx;
  background: url("https://static.test.swiftwd.com/worker/vip_more.png") no-repeat;
  background-size: 100% 100%;
  position: relative;
  padding: 34rpx;
  box-sizing: border-box;
}
.vip .more .tit {
  position: absolute;
  top: -20rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  font-size: 29rpx;
  color: #333333;
}
.vip .more .text {
  font-size: 27rpx;
  color: #7E7E7E;
  line-height: 69rpx;
  margin-top: 30rpx;
}
.vip .cont .top {
  position: relative;
  padding: 0 0rpx 70rpx 0rpx;
}
.vip .cont .top .vip_icon {
  position: absolute;
  top: -13rpx;
  right: 75rpx;
  z-index: 8;
}
.vip .cont .top .vip_icon image {
  width: 180rpx;
}
.vip .cont .top .up {
  position: absolute;
  width: 100%;
  height: 106rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  bottom: 0;
  left: 0;
  z-index: 9;
  text-align: center;
  line-height: 130rpx;
  color: #755022;
  font-size: 28rpx;
}
.vip .cont .top .info {
  border-radius: 25rpx;
  overflow: hidden;
  background-size: cover;
  padding: 28rpx 40rpx 40rpx 60rpx;
  background-repeat: no-repeat;
  box-sizing: border-box;
}
.vip .cont .top .info .tit {
  width: 260rpx;
  margin-bottom: 10rpx;
}
.vip .cont .top .info .mark {
  font-size: 25rpx;
  color: #7980AA;
  line-height: 35rpx;
  margin-bottom: 30rpx;
}
.vip .cont .top .info .mark.is_vip_mark {
  font-weight: 400;
  font-size: 25rpx;
  color: #72402B;
}
.vip .cont .top .info .vip_btn {
  width: 185rpx;
}
.vip .cont .top .info .date {
  margin-top: 30rpx;
}
.vip .cont .top .info .date .tit {
  font-weight: 400;
  font-size: 25rpx;
  color: #72402B;
}
.vip .cont .top .info .date .time {
  font-family: "HiraMaruProN", "HiraMaruProN";
  font-size: 31rpx;
  color: #010101;
}
.vip .cont .middle {
  margin-top: 94rpx;
}

