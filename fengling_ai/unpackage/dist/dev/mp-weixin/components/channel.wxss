/* 文章场景相关 */
.content_body {
  padding: 0 28rpx;
  box-sizing: border-box;
}
.content_body .item {
  margin-top: 60rpx;
}
.content_body .item .right {
  width: 65rpx;
  height: 65rpx;
  text-align: center;
  line-height: 65rpx;
  background: #CDE2FF;
  border-radius: 50%;
  flex-shrink: 0;
  justify-content: center;
}
.content_body .item .left .cover {
  margin-right: 15rpx;
  width: 119rpx;
  height: 119rpx;
  overflow: hidden;
  border-radius: 50%;
  flex-shrink: 0;
}
.content_body .item .left .cover image {
  width: 119rpx;
}
.content_body .item .left .info .title {
  font-weight: 500;
  font-size: 31rpx;
  color: #16244F;
}
.content_body .item .left .info .desc {
  font-weight: 400;
  font-size: 27rpx;
  color: #8999AF;
  line-height: 38rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}

