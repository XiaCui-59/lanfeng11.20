.custom-dots {
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  text-align: center;
  justify-content: center;
}
.dot {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin-right: 10rpx;
  background-color: #fff;
  border: 1px solid #e1e1e1;
  border-radius: 50%;
  transition: left 0.3s;
}
.dot:nth-child(2) {
  margin-right: 0;
}
.dot.active {
  border: 1px solid #abb4b5;
  background-color: #abb4b5;
}
