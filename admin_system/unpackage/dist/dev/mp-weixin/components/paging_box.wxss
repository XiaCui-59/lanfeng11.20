.btn {
  cursor: pointer;
}
.btn:hover {
  background: #f6f6f6;
}
.paging_box {
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-top: 1px solid #e7e7e7;
  position: relative;
  margin-top: 15px;
}
.paging_box .inner {
  font-size: 14px;
  color: #666;
  position: relative;
  top: 0;
  left: 0;
  -webkit-transform: translate(0, 0);
          transform: translate(0, 0);
}
.paging_box .inner .opera {
  margin: 0 20px;
}
.paging_box .inner .opera .item {
  width: 30px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  border-radius: 2px;
  border: 1px solid #d4d4d4;
  margin: 0 5px;
}
.paging_box .inner .opera .item image {
  width: 15px;
  vertical-align: middle;
}
.paging_box .inner .opera .item.btn {
  background: #fff;
}
.paging_box .inner .input .btn,
.paging_box .inner .input input {
  width: 30px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  border-radius: 2px;
  border: 1px solid #d4d4d4;
  margin: 0 5px;
  font-size: 14px;
}
.paging_box .inner .input .btn {
  width: 60px;
  background: #226FF9;
  color: #fff;
  border: 1px solid transparent;
  border-radius: 8px;
}

