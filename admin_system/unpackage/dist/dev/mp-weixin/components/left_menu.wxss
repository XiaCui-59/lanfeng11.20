.left_menu {
  width: 200px;
  height: 100vh;
  color: #fff;
  padding-top: 50px;
  box-sizing: border-box;
  overflow-x: visible;
  background: url(../../static/left_bg.png) no-repeat;
  background-size: 100% 100%;
  position: relative;
  font-family: PangMenZhengDaoBiaoTiTiMianFeiBan, PangMenZhengDaoBiaoTiTiMianFeiBan;
}
.left_menu .icon {
  position: absolute;
  top: 15px;
  left: 15px;
  z-index: 99;
  cursor: pointer;
}
.left_menu .left_bot {
  width: 164px;
  height: 180px;
  position: absolute;
  bottom: 10px;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background: rgba(0, 36, 82, 0.5);
  border-radius: 17px;
}
.left_menu .left_bot image {
  position: fixed;
  width: 294px;
  bottom: 0px;
  left: 0px;
  z-index: 100;
}
.left_menu .left_top {
  max-height: calc(100vh - 260px);
  overflow-y: scroll;
}
.left_menu .left_top::-webkit-scrollbar {
  width: 0;
}
.left_menu .line {
  min-height: 60px;
  line-height: 60px;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.left_menu .line .main_menu {
  width: 200px;
  padding: 0 15px;
  box-sizing: border-box;
  font-size: 17px;
  font-weight: 600;
}
.left_menu .line .main_menu:hover {
  cursor: pointer;
  background: #002452;
  cursor: pointer;
}
.left_menu .line .main_menu.active {
  background: #002452;
  color: #fff;
  position: relative;
}
.left_menu .line .main_menu image {
  width: 18px;
  height: 18px;
}
.left_menu .line .left image {
  width: 18px;
  margin-right: 10px;
}
.left_menu .line .sub_menu {
  width: 100%;
}
.left_menu .line .sub_menu .sub_line {
  height: 50px;
  line-height: 50px;
  padding-left: 40px;
  color: #fff;
  font-size: 15px;
}
.left_menu .line .sub_menu .sub_line:hover {
  background: #002452;
  cursor: pointer;
}
.left_menu .line .sub_menu .sub_line.active {
  background: #002452;
  color: #fff;
  position: relative;
}
.left_menu .line .sub_menu .sub_line.active::before {
  content: "";
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 20px;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.left_menu .line .sub_menu .sub_line image {
  width: 15px;
  margin-right: 10px;
}

