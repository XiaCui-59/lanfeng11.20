.invite {
  height: 100vh;
  background: #EFF0F5;
  color: #fff;
}
.invite .cont_header {
  height: 460rpx;
  background: url("https://static.test.swiftwd.com/worker/invite_top_bg.png") no-repeat;
  background-size: 100% 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  position: relative;
}
.invite .cont_bot {
  position: fixed;
  width: 100%;
  background: linear-gradient(180deg, #FFFFFF 0%, #FBE6C9 6%, #FFF1DF 100%);
  border-radius: 42rpx 42rpx 0rpx 0rpx;
}
.invite .cont_bot .title {
  margin: 40rpx 0 20rpx 0;
  font-weight: 600;
  font-size: 38rpx;
  color: #282319;
  text-align: center;
  padding: 0 28rpx;
  box-sizing: border-box;
