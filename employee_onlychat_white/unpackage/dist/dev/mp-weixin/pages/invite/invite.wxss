.invite {
  height: 100vh;
  background: #EFF0F5;
  color: #fff;
}
.invite .cont_header {
  height: 460rpx;
  background: url("https://static.test.swiftwd.com/worker/invite_top_bg.png") no-repeat;
  background-size: 100% 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  position: relative;
}
.invite .cont_header .top_wrap {
  width: calc(100% - 100rpx);
  position: absolute;
  bottom: 0;
  left: 50rpx;
  background: url("https://static.test.swiftwd.com/worker/invite_title_bg.png") no-repeat;
  background-size: 100% 100%;
  padding: 53rpx 0 30rpx 0;
}
.invite .cont_header .top_wrap .bot {
  font-size: 27rpx;
  color: #855921;
  text-align: center;
  margin-top: 30rpx;
}
.invite .cont_header .top_wrap .top .top_item {
  width: 50%;
  text-align: center;
  position: relative;
}
.invite .cont_header .top_wrap .top .top_item:first-child::after {
  content: "";
  position: absolute;
  right: -1rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  height: 80%;
  border-right: 2rpx dashed #4A2612;
}
.invite .cont_header .top_wrap .top .top_item .tit {
  margin-bottom: 15rpx;
  font-size: 35rpx;
  color: #72402B;
}
.invite .cont_header .top_wrap .top .top_item .text {
  font-size: 50rpx;
  justify-content: center;
}
.invite .cont_header .top_wrap .top .top_item .text .num {
  font-family: Arial, Arial;
  font-weight: 900;
  text-shadow: 0px 2px 2px rgba(0, 0, 0, 0.5);
}
.invite .cont_header .top_wrap .top .top_item .text .period {
  font-weight: 400;
  font-size: 29rpx;
  color: #7E7E7E;
  display: inline-block;
  margin-left: 15rpx;
}
.invite .cont_header .top_wrap .top .top_item:first-child .text .num {
  color: #F0BA78;
}
.invite .cont_header .top_wrap .top .top_item:last-child .text .num {
  color: #83561E;
}
.invite .cont_bot {
  background: url("https://static.test.swiftwd.com/worker/invite_body_bg.png") no-repeat;
  background-size: 100% 100%;
}
.invite .cont_bot .cont_bot_fixed {
  padding: 46rpx 30rpx 0 30rpx;
}
.invite .u-demo-block__content {
  color: #333;
  font-weight: 400;
  font-size: 29rpx;
}
.invite .btn {
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background: linear-gradient(180deg, #F3BC7A 0%, #82561E 100%);
  border-radius: 48rpx;
  font-weight: 600;
  font-size: 31rpx;
  color: #FFFFFF;
  margin: 0rpx auto 46rpx auto;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}
.invite .mask {
  box-sizing: border-box;
}
.invite .mask .inner {
  width: calc(100% - 96rpx);
  position: absolute;
  top: 15%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.invite .mask .inner .close {
  position: absolute;
  top: -56rpx;
  right: 0;
}
.invite .mask .inner .close image {
  width: 50rpx;
}
.invite .mask .inner.friend image {
  width: 400rpx;
  float: right;
}
.invite .mask .inner.method {
  height: 800rpx;
  background: url("https://static.test.swiftwd.com/worker/share_bg.png") no-repeat;
  background-size: 100% 100%;
}
.invite .mask .inner.method .cost {
  position: absolute;
  top: 31%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  /* 创建一个水平方向的颜色渐变 */
  background: linear-gradient(90deg, #FE5531 0%, #FF1945 100%);
  /* 将文本透明度设置为0，以便背景渐变可见 */
  color: transparent;
  /* 使用背景渐变来填充文本背景 */
  -webkit-background-clip: text;
  background-clip: text;
  font-weight: 600;
  font-size: 63rpx;
}
.invite .mask .inner.method .cost .count {
  font-weight: 900;
  font-size: 130rpx;
  font-family: "也字工厂";
}
.invite .mask .inner.method > image {
  position: absolute;
  height: 40rpx;
  top: 57%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.invite .mask .inner.method .bot {
  padding-top: 180rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: url("https://static.test.swiftwd.com/worker/share_bg2.png") no-repeat;
  background-size: 100% 100%;
}

