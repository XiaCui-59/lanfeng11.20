.inputing {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 110;
  background: rgba(0, 0, 0, 0.7);
}
.inputing text {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  color: #fff;
  font-size: 29rpx;
}
.inputing > image {
  width: 80%;
  position: absolute;
  top: 35%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.inputing .bot_bg {
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 100%;
  text-align: center;
  overflow: hidden;
}
.inputing .bot_bg .text {
  font-size: 29rpx;
  color: #FFFFFF;
  line-height: 40rpx;
  text-align: center;
  margin: 30rpx 0;
}
.inputing .bot_bg image {
  width: 100%;
}
::-webkit-input-placeholder {
  font-weight: 400;
  font-size: 27rpx;
  color: #9E9E9E;
}
 .input-value-border, .input-value {
  border: none !important;
  height: 84rpx !important;
  font-size: 28rpx !important;
}
.ai_inner {
  overflow: scroll;
}
.ai_icon {
  position: fixed;
  bottom: 25%;
  right: 10rpx;
  z-index: 100;
}
.ai_icon image {
  width: 120rpx;
}
.ai_chat {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 105;
}
.ai_chat .auth {
  position: absolute;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  bottom: 0;
  left: 0;
  background: #fff;
}
.ai_chat .auth .btn {
  width: 48%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #f6f6f6;
  color: #333;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.ai_chat .auth .sure {
  background: #106afa;
  border: 1px solid #106afa;
  color: #fff;
}
.ai_chat .ai_inner {
  width: 100%;
  height: 80%;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 0;
}
.ai_chat .ai_inner .full_header {
  background: url("https://static.test.swiftwd.com/worker/chat_top_bg.png") no-repeat;
  background-size: cover;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 105;
}
.ai_chat .ai_inner .full_header .page_top {
  position: absolute;
  left: 30rpx;
  color: #fff;
  font-weight: 600;
}
.ai_chat .ai_inner .full_header .page_top image {
  width: 40rpx;
}
.ques_wrap {
  width: calc(100% - 80rpx);
  max-width: 700px;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  box-sizing: border-box;
}
.ques_wrap.upper {
  position: fixed;
  width: 100%;
  left: 0;
  z-index: 105;
}
.ques_wrap .input {
  height: 100%;
}
.ques_wrap .input .input_right {
  width: calc(100% - 50rpx);
}
.ques_wrap .input .input_right input {
  width: calc(100% - 126rpx);
  height: 100%;
  font-size: 30rpx;
  border-radius: 42rpx;
  box-shadow: 0 2rpx 7rpx 0rpx #DDDDDD;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.ques_wrap .input .input_right .confirm_send {
  width: 110rpx;
  height: 62rpx;
  line-height: 62rpx;
  background: linear-gradient(135deg, #4F86FD 0%, #71BAFF 100%);
  border-radius: 10rpx;
  font-size: 29rpx;
  color: #FFFFFF;
  margin-left: 16rpx;
  text-align: center;
}
.ques_wrap .input .btn {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 100%;
  border-radius: 42rpx;
  font-size: 29rpx;
  box-shadow: 0 2rpx 7rpx 0rpx #DDDDDD;
}
.ques_wrap .input .btn.press {
  width: calc(100% - 50rpx);
}
.ques_wrap .input image {
  width: 30px;
  height: 30px;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.ques_wrap .input .imgs image {
  margin-left: 20rpx;
}
.ques_wrap .input .imgs image:nth-child(2) {
  width: 26px;
  height: 26px;
}
.chat_wrap {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background: #F4F9FF;
}
.chat_wrap .list .qa_item .line {
  margin-top: 41rpx;
  text-align: right;
}
.chat_wrap .list .qa_item .line image {
  margin-left: 20rpx;
}
.chat_wrap .list .qa_item .line .inline_box {
  width: 80%;
}
.chat_wrap .list .qa_item .line .inline_box image {
  width: 65rpx;
  height: 65rpx;
  vertical-align: top;
  margin-left: 0;
}
.chat_wrap .list .qa_item .line .inline_box .cont {
  display: inline-block;
  max-width: calc(100% - 110rpx);
  overflow: hidden;
  line-height: 42rpx;
  color: #fff;
  font-size: 27rpx;
  font-family: "微软雅黑";
  background: #106afa;
  padding: 20rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  text-align: left;
}
.chat_wrap .list .qa_item .line.left {
  text-align: left;
}
.chat_wrap .list .qa_item .line.left .inline_box {
  justify-content: flex-start;
  align-items: start;
}
.chat_wrap .list .qa_item .line.left image {
  margin-right: 20rpx;
}
.chat_wrap .list .qa_item .line.left .cont {
  color: #333;
  background: #fff;
}
.chat_wrap .list .qa_item .line.right {
  display: flex;
  justify-content: flex-end;
}
.chat_wrap .list .qa_item .line.right .inline_box {
  align-items: start;
  justify-content: flex-end;
}
.chat_wrap .list .qa_item .line.right .cont {
  background: linear-gradient(117deg, #4F85FD 0%, #72BAFF 100%);
  color: #fff;
}

