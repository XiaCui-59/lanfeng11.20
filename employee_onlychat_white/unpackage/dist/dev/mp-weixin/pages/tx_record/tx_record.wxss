.tx_record {
  height: 100vh;
  background: #F7F8FA;
  color: #333333;
  padding: 0 28rpx;
  box-sizing: border-box;
}
.tx_record .cont .list {
  margin-top: 30rpx;
}
.tx_record .cont .list .list_item:first-child .right {
  padding: 0rpx 0rpx 0rpx 30rpx;
}
.tx_record .cont .list .list_item:last-child .right {
  padding: 30rpx 0rpx 0rpx 30rpx;
}
.tx_record .cont .list .list_item .left {
  width: 25%;
  font-weight: 400;
  font-size: 27rpx;
  color: #555555;
}
.tx_record .cont .list .list_item .left .year {
  color: #333;
  margin-bottom: 4rpx;
}
.tx_record .cont .list .list_item .right {
  width: 75%;
  padding: 30rpx 0rpx 0rpx 30rpx;
  box-sizing: border-box;
  border-left: 2rpx solid rgba(117, 80, 34, 0.2);
  position: relative;
}
.tx_record .cont .list .list_item .right .mount {
  font-family: Arial, Arial;
}
.tx_record .cont .list .list_item .right::before {
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: -9rpx;
}
.tx_record .cont .list .list_item .right .right_inner {
  padding: 30rpx 40rpx;
  background: #FFFFFF;
  border-radius: 15rpx;
  box-sizing: border-box;
}
.tx_record .cont .list .list_item .right.pending .mount,
.tx_record .cont .list .list_item .right.pending .ri {
  color: #755022;
}
.tx_record .cont .list .list_item .right.pending::before {
  background: #755022;
}
.tx_record .cont .list .list_item .right.success .mount,
.tx_record .cont .list .list_item .right.success .ri {
  color: #52C41A;
}
.tx_record .cont .list .list_item .right.success::before {
  background: #52C41A;
}
.tx_record .cont .list .list_item .right.failed .mount,
.tx_record .cont .list .list_item .right.failed .ri {
  color: #D90305;
}
.tx_record .cont .list .list_item .right.failed::before {
  background: #D90305;
}
.tx_record .cont .list .list_item .right .le .mount {
  font-weight: 800;
  font-size: 29rpx;
}
.tx_record .cont .list .list_item .right .le .tips {
  font-weight: 400;
  font-size: 23rpx;
  color: #555555;
  margin-top: 8rpx;
}
.tx_record .cont .list .list_item .right .ri {
  font-weight: 600;
  font-size: 29rpx;
  text-align: center;
}
.tx_record .cont .list .list_item .right .ri .reason {
  font-weight: 400;
  font-size: 23rpx;
  color: #333333;
}

