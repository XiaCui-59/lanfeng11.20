.tags .tags_box {
  width: 100%;
  background: #fff;
}
.tags .tags_box .title {
  font-weight: 600;
  position: relative;
  margin-bottom: 50rpx;
}
.tags .tags_box .title text {
  font-weight: 400;
  font-size: 27rpx;
  color: #A8A8A8;
}
.tags .tags_box .title .close {
  position: absolute;
  top: 50%;
  right: 0px;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  cursor: pointer;
}
.tags .tags_box .title .close image {
  width: 42rpx;
  height: 42rpx;
}
.tags .tags_box .btns .btn {
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  background: #F7BC05;
  box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.15);
  color: #fff;
  border-radius: 15rpx;
  font-size: 29rpx;
  font-weight: 600;
}
.tags .tags_box .item_wrap {
  font-size: 14px;
}
.tags .tags_box .item_wrap .item {
  margin-bottom: 64rpx;
}
.tags .tags_box .item_wrap .item .tit {
  font-weight: 600;
}
.tags .tags_box .item_wrap .item .tag_container {
  flex-wrap: wrap;
}
.tags .tags_box .item_wrap .item .tag_container .tag {
  height: 76rpx;
  line-height: 76rpx;
  width: calc(32% - 6rpx);
  border-radius: 6rpx;
  background: #F9F9F9;
  border: 2rpx solid #F9F9F9;
  margin-right: 2%;
  margin-top: 28rpx;
  cursor: pointer;
  position: relative;
  font-size: 23rpx;
  color: #333333;
  text-align: center;
}
.tags .tags_box .item_wrap .item .tag_container .tag:nth-child(3n) {
  margin-right: 0;
}
.tags .tags_box .item_wrap .item .tag_container .tag image {
  position: absolute;
  top: 0;
  right: 0;
  width: 38rpx;
  height: 38rpx;
}
.tags .tags_box .item_wrap .item .tag_container .tag.active {
  font-weight: 600;
  border: 2rpx solid #EA9900;
  color: #EA9900;
}

