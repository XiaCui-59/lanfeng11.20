.content {
  background: #f8f8f8;
}
.content .list .item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  color: #0f0f0f;
  font-size: 30rpx;
}
.content .list .item .top {
  padding: 20rpx;
  border-bottom: 1px dashed #eee;
  position: relative;
}
.content .list .item .top:before {
  content: "";
  width: 2px;
  height: 30rpx;
  background: #279CF4;
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.content .list .item .top text {
  position: absolute;
  top: 50%;
  right: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  color: #20b1f3;
  font-size: 28rpx;
}
.content .list .item .info .line {
  margin: 20rpx 0;
}
.content .list .item .info .line .tit {
  width: 160rpx;
}
.content .list .item .info .line .text {
  width: calc(100% - 160rpx);
  color: #666;
  font-size: 30rpx;
}
.content .list .item .btns {
  margin-top: 40rpx;
}
.content .list .item .btns .btn {
  width: 160rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-radius: 170rpx;
  border: 1px solid #dedede;
  margin-left: 20rpx;
  font-size: 26rpx;
}

